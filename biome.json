{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": false
  },
  "files": {
    "ignoreUnknown": false,
    "ignore": [
      "dist/*",
      "node_modules/**/*",
      "tests",
      "**/*.test.ts",
      "**/*.d.ts",
      "/*.js",
      "/*.cjs",
      "/*.md",
      "/*.json",
      "/*.mjs",
      "/*.yml",
      ".yarn/*",
      "internals/*",
      "public/*",
      ".vscode",
      ".next",
      ".circleci"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "tab"
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noConsoleLog": "info"
      },
      "a11y": { "recommended": true, "noSvgWithoutTitle": "off" }
    }
  },
  "javascript": {
    "formatter": {
      "enabled": true,
      "quoteStyle": "double",
      "semicolons": "always",
      "arrowParentheses": "always"
    }
  }
}
